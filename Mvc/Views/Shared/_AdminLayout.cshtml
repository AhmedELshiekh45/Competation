<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - لوحة التحكم</title>

	<!-- Bootstrap RTL Support -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

	<!-- Custom CSS -->
	<link href="~/css/admin.css" rel="stylesheet" />

	<!-- Background Image CSS -->
	<style>
		body {
			background-image: url('/images/1.jpg'); /* مسار الصورة */
			background-size: cover;
			background-position: center;
			background-repeat: no-repeat;
			font-family: 'Arial', sans-serif;
		}

		/* تخصيص الـ Sidebar */
		nav {
			background-color: rgba(0, 0, 0, 0.85); /* لون داكن مع شفافية */
			width: 260px;
			height: 100vh;
			padding: 20px;
		}

		.nav-link {
			font-size: 1.2rem; /* تكبير حجم الخط */
			padding: 12px 15px; /* زيادة المسافة الداخلية */
			border-radius: 8px; /* حواف مستديرة */
			transition: all 0.3s ease-in-out;
		}

			.nav-link:hover {
				background-color: #007bff !important; /* لون أزرق عند المرور */
				color: white !important;
				transform: scale(1.05); /* تكبير عند المرور */
			}

		.text-center {
			font-size: 1.5rem;
			font-weight: bold;
			margin-bottom: 15px;
		}

		/* زر تسجيل الخروج */
		.logout-btn {
			background-color: #dc3545;
			color: white;
			font-size: 1.2rem;
			padding: 10px;
			border-radius: 8px;
			transition: all 0.3s ease-in-out;
			text-align: center;
		}

			.logout-btn:hover {
				background-color: #bb2d3b;
				transform: scale(1.1);
			}

		/* محتوى الصفحة */
		main {
			padding: 20px;
			flex-grow: 1;
		}
	</style>
</head>
<body>
	<div class="d-flex">
		<!-- Sidebar -->
		<nav class="text-white d-flex flex-column justify-content-between">
			<div>
				<h4 class="text-center">لوحة التحكم</h4>
				<ul class="nav flex-column">
					<li class="nav-item">
						<a class="nav-link text-white" asp-action="DashBord" asp-controller="Admin">🏠 الرئيسية</a>
					</li>
					<li class="nav-item">
						<a class="nav-link text-white" asp-action="GetAllContestant" asp-controller="Contestant">👤 إدارة المتسابقين</a>
					</li>
					<li class="nav-item">
						<a class="nav-link text-white" asp-action="GetAll" asp-controller="Teacher">📚 إدارة المحفظين</a>
					</li>
				
					<li class="nav-item">
						<a class="nav-link text-white" asp-action="GetAll" asp-controller="competation">📊 إدارة المسابقات</a>
					</li>
				</ul>
			</div>

			<!-- زر تسجيل الخروج -->
			<div>
				<a href="@Url.Action("Logout", "Account")" class="logout-btn d-block text-decoration-none">🚪 تسجيل الخروج</a>
			</div>
		</nav>

		<!-- محتوى الصفحة -->
		<main>
			@RenderBody()
		</main>
	</div>

	<!-- Bootstrap Bundle with Popper -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

	<!-- Custom JavaScript -->
	<script src="~/js/admin.js"></script>
</body>
</html>
